<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="일정 등록"
            android:textColor="#FFFFFF"
            android:textSize="30sp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/cycle_selcet">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="제목"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="일정을 입력해주세요."/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:orientation="horizontal"
        android:background="@drawable/cycle_selcet">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="54sp"
            android:layout_height="wrap_content"
            android:text="일정"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editScheduleStrDate"
                    android:layout_width="150sp"
                    android:layout_height="35sp"
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:hint="Start Date"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/editScheduleStrTime"
                    android:layout_width="150sp"
                    android:layout_height="35sp"
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:hint="Start Time"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/editScheduleEndDate"
                    android:layout_width="150sp"
                    android:layout_height="35sp"
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:hint="Due Date"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/editScheduleEndTime"
                    android:layout_width="150sp"
                    android:layout_height="35sp"
                    android:gravity="center_horizontal"
                    android:textSize="22sp"
                    android:hint="Due Time"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/cycle_selcet">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="세부내용"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:hint="세부내용을 적어주시길 바랍니다."/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notify_use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="알람 설정 여부"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/notify_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:checked="true"
            android:text="알람 사용"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/cycle_selcet">

        <TextView
            android:id="@+id/select_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="start|left"
            android:text="반복"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/select_view"
            android:layout_width="30sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="" />
        <TextView
            android:id="@+id/select_cycle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text=">     "
            android:layout_weight="1"
            android:textSize="20sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/regBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="일정등록" />



</LinearLayout>